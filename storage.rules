rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to read and write to their own document folders
    match /deliveryDocs/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to write to proof of delivery folders if they are authenticated
    match /deliveryProofs/{orderId}/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true; // Public read for viewing proofs
    }

    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
